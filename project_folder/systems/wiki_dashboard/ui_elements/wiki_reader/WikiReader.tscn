script/source = "extends Tween

@onready var panel = $\"../../CanvasLayer/MarginContainer/HBoxContainer/Control/Panel\"

func _ready():
	panel.set_position(Vector2(0, get_window().get_size().y))

# slide in
func slide_in()->void:
	var center_position:Vector2 = Vector2(0, 0)
	var hide_position:Vector2    = Vector2(panel.get_position().x, get_window().get_size().y)
	
	self.interpolate_property(
		panel,
		\"position\",
		hide_position,
		center_position,
		0.3, 
		Tween.TRANS_CUBIC,
		Tween.EASE_IN_OUT
	)
	
	self.start()

# slide out
func slide_out()->void:
	var center_position:Vector2 = Vector2(0, 0)
	var hide_position:Vector2    = Vector2(panel.get_position().x, get_window().get_size().y)

	self.interpolate_property(
		panel,
		\"position\",
		center_position,
		hide_position,
		0.3, 
		Tween.TRANS_CUBIC,
		Tween.EASE_IN_OUT
	)

	self.start()
"

